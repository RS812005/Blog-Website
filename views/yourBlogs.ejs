<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        .blog-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            padding: 20px;
            gap: 20px; /* Add some space between the cards */
        }
        .card {
            margin: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }
        .card:hover {
            transform: scale(1.05);
        }
        .card-title {
            color: #007bff;
        }
        .card-body {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .card-text {
            text-align: center;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .card-img-top {
            width: 100%;
            height: auto;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="blog-container">
        <% blogs.forEach(blog => { %>
            <form class="card" style="width: 18rem;" action="/dashboard/searchBlog" method="POST">
                <img class="card-img-top" src="../uploads/<%= blog.blogID + blog.fileType %>" alt="<%= blog.title %>">
                <div class="card-body">
                    <h5 class="card-title"><%= blog.title %></h5>
                    <p class="card-text"><%= blog.content %></p>
                    <p class="card-text"><small class="text-muted">Author: <%= blog.name %></small></p>
                    <input type="hidden" name="title" value="<%= blog.title %>">
                    <input type="hidden" name="content" value="<%= blog.content %>">
                    <input type="hidden" name="name" value="<%= blog.name %>">
                    <button type="submit" class="btn btn-primary">Check Me!</button>
                </div>
            </form>
        <% }) %>
    </div>
</body>
</html>
